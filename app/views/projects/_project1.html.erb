<%= form_for project, remote: true do |f| %>
  
    
      <div class="form-row  head  p-3 mb-2 bg-primary text-white">
        <div class="col-10">
          <label><%= f.label :complete, project.name %></label> 
        </div>

        <div class="col-1">
          <button type="submit" class="">Update</button>
          
        </div>
        <div class="col-1">
          
          <button type="submit" class=""><%= link_to "Remove", project, method: :delete, data: {confirm: "Are you sure?"}, remote: true %></button>
        </div>

      </div>
  
  
<% end %>  

<%= form_tag  project_tasks_path(project), remote: true do   %>
  
  <div class="form-row">
  
    <button class="btn btn-outline-success" type="button">+</button>
  
  <input type="text" class="form-control" placeholder="Start typing here to create a task .." aria-label="" aria-describedby="basic-addon1">
  
    <button class="btn btn-outline-success" type="button">Add Task</button>
  </div>

<%end%>




<% project.tasks.each do |task| %>
  <div class="row">
    <div class="col-md-1"><%= check_box_tag class: 'custom-control-input'  %> </div>
    <div class="col-md-10"><span class="input-group-text" id=""><%= task.name %> </span> </div>
    <div class="col-md-1">
      
      <span id='caret_task<%= task.id %>' class='ui-icon ui-icon-caret-2-n-s caret_task'></span><span>|</span>
      <span id='edit_task<%= task.id %>' class='ui-icon ui-icon-pencil'></span><span>|</span>
      <span id='delete_task<%= task.id %>' class='ui-icon ui-icon-trash delete_task'></span>
    </div>
  </div>
<% end %>




