<h4>All projects</h4>
<p></p>
<div class="table-responsive"> 
<%= link_to "Add new project", new_project_path %>
 <table class="table table-hover table-bordered">
   <tr class="table-primary">
      <th>N</th>
      <th>Name</th>
      <th></th>
      </tr>
    <% @projects.each do |project|%>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= link_to "Tasks of project  /", "#" %>
            <%= link_to "Update  /", edit_project_path(project)%>
            <%= link_to "Delete", project_path(project),
                                  method: :delete,
                                  data: {confirm: "Are you sure delete book"} %></td>
        
      </tr>
    <% end %>
 </table>
 
</div>
